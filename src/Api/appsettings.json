{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Diagnostics.HealthChecks.HealthCheckService": "Information",
      "Microsoft.Extensions.Diagnostics.HealthChecks": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "logs-cottage-sensor-aggregator-prod-healthcheck-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "batchPostingLimit": 50,
          "bufferBaseFilename": "logs/buffer-cottage-sensor-aggregator-prod-healthcheck",
          "bufferFileSizeLimitBytes": 5242880,
          "flushInterval": "00:00:10",
          "condition": "ContainsKey('LogType') and @p['LogType'] == 'HealthCheck'"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "logs-cottage-sensor-aggregator-prod-app-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "batchPostingLimit": 50,
          "bufferBaseFilename": "logs/buffer-cottage-sensor-aggregator-prod-app",
          "bufferFileSizeLimitBytes": 5242880,
          "flushInterval": "00:00:10",
          "condition": "ContainsKey('LogType') and @p['LogType'] == 'Application'"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:9500"
      }
    }
  },
  "ZontSettings": {
    "Email": "",
    "Login": "",
    "Password": "",
    "ApiUrl": "https://my.zont.online/api/widget/v3/"
  },
  "HealthCheckSettings": {
    "Interval": "00:05:00",
    "IsEnabled": true,
    "Delay": "00:00:01",
    "Period": "00:00:01"
  },
  "Jwt": {
    "Issuer": "",
    "Audience": "",
    "Key": ""
  }
}
